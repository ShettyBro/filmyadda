/* Modal Styles */
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  align-content: center;
  text-align: center;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.4);
  font-size: larger;
}

.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  padding: 20px;
  border: 5px solid #ff0303;
  width: 450px;
  align-content: center;
  text-align: center;
  position: relative;
}

.modeal-message {
  margin-top: 20px;
  margin-bottom: 10px;
  font-size: 20px;
  color: #000;
  text-align: center;
}

.close {
  color: #100000;
  font-size: 30px;
  font-weight: bold;
  position: absolute;
  top: 24%;
  right: 5%;
  cursor: pointer;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

