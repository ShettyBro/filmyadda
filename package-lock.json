/* Global Styles */
* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* Body Styles */
body {
  width: 100%;
  min-height: 100vh;
  background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url('assets/background.jpg');
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
  padding: 0;
  padding-top: 20px; 
}

/* Navigation Bar Styles */
.nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 0%;
}

.nav button {
  border: 0;
  outline: 0;
  background: transparent;
  border: 1px solid #fff;
  cursor: pointer;
  color: #fff;
  font-size: 15px;
  padding: 4px 10px;
  margin-left: 10px;
  position: relative;
  border-radius: 4px;
}

.nav button:hover {
  box-shadow: 0 0 15px 5px gold;
  background-color: gold;
  color: black;
}

.navbt {
  width: 15%;
  height: 0%;
  margin-top: 2%;
  display: flex;
  flex-direction: row;
}

.logo {
  padding-left: 30px;
  width: 200px;
  height: 80px;
  cursor: pointer;        
}

/* Image Grid Styles */
/* Grid Styles */
.image-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
  gap: 30px 45px;
  padding: 3%;
  padding-bottom: 0%;
  
}

/* Image Item Styles */
.image-item {
  text-align: center;
  font-weight: 600;
  font-family: 'Times New Roman', Times, serif;
  font-size: large;
  position: relative; /* Positioning for hover effects */
  overflow: hidden; /* To contain the scaled image */
}

/* Image Styles */
.image-item img {
  width: 100%;
  height: auto;
  display: block;
  margin-bottom: 10px;
}

/* Text Styles */
.image-item p {
  font-size: 20px;
  color: white;
  margin-top: 10px;
  transition: text-shadow 0.3s ease; /* Transition for the glowing effect */
  /* background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgba(30, 30, 30, 0.7)); */
}

/* Glow effect on hover */
.image-item:hover p {
  text-shadow: 0 0 5px gold, 0 0 10px gold; /* Glow effect on text */
}

/* Button Styles */
.image-item button {
  border: 0;
  outline: 0;
  background: transparent;
  border: 1px solid #fff;
  cursor: pointer;
  color: #fff;
  font-size: 15px;
  padding: 4px 10px;
  margin-top: 10px;
  border-radius: 4px;
}

/* Button Hover Effect */
.image-item button:hover {
  background: rgba(255, 255, 255, 0.2); /* Change background on hover */
  transform: scale(1.05); /* Scale effect */
}

/* Video Player Styles */
.container {
  max-width: auto;
  margin: 0 auto;
  margin-bottom: 0%;
  align-content: center;
  text-align: center;
  max-height: min-content;
}

#videoPlayer {
  position: relative;
  width: 100%;
  height: auto;
  max-width: 1080px;
}

/* Title Styles */
.cont {
  max-width: 800px;
  margin: 0 auto;
  padding: 0 20px;
  align-content: center;
  text-align: center;
}

.cont h1 {
  margin-top: 20px;
  font-size: 40px;
  color: white;
  margin-bottom: 20px;
}

.cont h1:hover {
  transform: translateY(-10px);
  color: #ffcc00;
  
}

/* Custom Video Player Controls */
.controls {
  position: relative;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 0px;
  padding: 10px;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 5px;
  transition: opacity 0.3s ease;
  opacity: 0;
  visibility: hidden;
  margin-bottom: 10%;
  max-width: 1080px;
}

.controls.visible {
  opacity: 1;
  visibility: visible;
}

button {
  background-color: transparent;
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  padding: 0;
}

button:hover {
  opacity: 0.6;
}

input[type="range"] {
  width: 800px;
  height: 5px;
  background: #430cc4;
  border-radius: 5px;
  outline: none;
  margin: 0 10px;
  cursor: pointer;
}

input[type="range"]::-webkit-slider-runnable-track {
  background: transparent;
}

input[type="range"]::-webkit-slider-thumb {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background: #007bff;
  cursor: pointer;
}

input[type="range"]::-moz-range-thumb {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background: #007bff;
  cursor: pointer;
}

#fullScreenBtn {
  background: none;
  border: none;
  cursor: pointer;
}

#volumeControl {
  width: 100px;
}

/* Main Content Styles */
.maincontent {
  margin-top: 100px;
  text-align: center;
  margin-bottom: 100px;
  color: #fff;
}

.maincontent h1 {
  font-size: 80px;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  border-right: 2px solid rgba(255, 255, 255, 0.75);
  letter-spacing: 2px;
  animation: typing 3s steps(20, end), blink-caret 0.75s step-end infinite;
  opacity: 1;
}

.maincontent p {
  margin-top: 5px;
  font-size: 20px;
  animation: fadeIn 2.5s ease-out;
}

.maincontent .button-container {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-top: 20px;
}

.maincontent button {
  border: 0;
  outline: 0;
  background: transparent;
  border: 1px solid #fff;
  cursor: pointer;
  color: gold;
  font-size: 20px;
  padding: 10px 20px;
  border-radius: 4px;
  transition: box-shadow 0.3s ease, background-color 0.3s ease, color 0.3s ease;
}

.maincontent button:hover {
  box-shadow: 0 0 15px 5px gold;
  background-color: gold;
  color: black;
}

/* Keyframes for Typing and Blinking Cursor Effects */
@keyframes typing {
  from {
      width: 0;
  }
  to {
      width: 100%;
  }
}

@keyframes blink-caret {
  from, to {
      border-color: transparent;
  }
  50% {
      border-color: white;
  }
}

@keyframes fadeIn {
  0% {
      opacity: 0;
  }
  100% {
      opacity: 1;
  }
}

/* Footer Styles */
.footer {
  background-color: #333;
  color: white;
  padding: 10px 20px;
  text-align: center;
  width: 100%;
  position: static;
  bottom: 0;
  left: 0;
  margin: 0;
  margin-top: 10%;
}

.video-player {
  border: 2px;
}

/* Login Box Styles */
/* General Box Styles */
.box {
  height: 500px;
  width: 500px;
  border: 1px solid white;
  border-radius: 15px;
  background: transparent;
  backdrop-filter: blur(15px);
  display: flex;
  justify-content: center;
  margin-left: 35%;
  margin-right: 10%;
  margin-top: 5%;
  margin-bottom: 11%;
}

.box img {
  width: 200px;
  height: 100px;
  margin-left: 25%;
  margin-top: 20px;
  margin-bottom: 0%;
}

/* Input Box Styles */
.inputbox {
  width: 100%;
  position: relative;
  border-bottom: 2px solid rgba(241, 239, 239, 0.5);
  margin-top: 20px;
}

.inputbox label {
  width: 100%;
  height: 50%;
  position: absolute;
  top: 0px;
  left: 0px;
  color: white;
  font-size: 20px;
  transition: 1s;
}

/* Glowing Effect for Input Fields */
.inputbox input {
  width: 100%;
  border: none;
  padding: 5% 0px 15px;
  outline: none;
  background: transparent;
  color: #fff;
  margin-top: 2%;
}

/* Add glow effect for the text only while typing */
.inputbox input:focus {
  border-bottom: 2px solid rgb(168, 0, 0); /* Keep the border color change */
  text-shadow: 0 0 5px gold, 0 0 10px gold; /* Gold glow effect for the text */
}

/* When valid, keep glowing text effect */
.inputbox input:valid {
  text-shadow: 0 0 5px gold, 0 0 10px gold; /* Gold glow effect for the text */
}

/* Label Focus Styles */
.inputbox input:focus~label {
  top: -15px;
  color: gold; /* Change label color to gold when input is focused */
}

/* Button Styles */
.box button {
  margin-top: 10%;
  margin-bottom: 10%;
  width: auto;
  font: inherit;
  background-color: rgb(168, 0, 0);
  border: 0;
  color: #e7e7e7;
  border-radius: 0.5em;
  font-size: 1.35rem;
  padding: 0.375em 1em;
  font-weight: 600;
  text-shadow: 0 0.0625em 0 #fff;
  box-shadow: inset 0 0.0625em 0 0 #f4f4f4, 0 0.0625em 0 0 #f10000,
              0 0.125em 0 0 #ececec, 0 0.25em 0 0 #d77f7f, 0 0.3125em 0 0 #dedede,
              0 0.375em 0 0 #dcdcdc, 0 0.425em 0 0 #e20505, 0 0.425em 0.5em 0 #cecece;
  transition: 0.15s ease;
  cursor: pointer;
  margin-left: 35%;
}

/* Text Styles */
.box p, .box2 p {
  color: white;
  font-size: 18px;
  text-align: center;
  margin-top: 20px;
}

/* Autofill Styles */
input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0 1000px #000 inset !important;
  box-shadow: 0 0 0 1000px #000 inset !important;
  color: #fff !important;
}

input:-webkit-autofill::first-line {
  color: #fff !important;
}


